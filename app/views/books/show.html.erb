<div class='container'>
  <div class='row'>
    <div class='col-md-3'>
      <h2>User info</h2>
      <%= render 'users/info', user: @user %>
      <h2 class="mt-3">New book</h2>
      <%= render 'form', book: @book %>
    </div>
    <div class='col-md-8 offset-md-1'>
  		<h2>Book detail</h2>
  		<table class='table'>
  		  <tr>
          <td><%= link_to(@book_show.user) do %>
            <%= image_tag @book_show.user.get_profile_image, size: "100x100" %><br>
            <%= @book_show.user.name %>
            <% end %>
          </td>
          <td><%= link_to @book_show.title, @book %></td>
          <td><%= @book_show.body %></td>
          <% if @book_show.favorited_by?(current_user) %>
            <td>
              <%= link_to book_favorites_path(@book_show), method: :delete do %>
                ♥<%= @book_show.favorites.count %>
              <% end %>
            </td>
          <% else %>
            <td>
              <%= link_to book_favorites_path(@book_show), method: :post do %>
                ♡<%= @book_show.favorites.count %>
              <% end %>
            </td>
          <% end %>
          <td>コメント数:<%= @book_show.book_comments.count %></td>
          <% if @book_show.user == current_user %>
            <td><%= link_to 'Edit', edit_book_path(@book_show.id), class: "btn btn-sm btn-success" %></td>
            <td><%= link_to 'Destroy', book_path(@book_show.id), method: :delete, "data-confirm" => "本当に消しますか？", class: "btn btn-sm btn-danger"%></td>
          <% end %>
        </tr>
        <tr>
          <% @book_show.book_comments.each do |book_comment| %>
            <td>
              <%= link_to(book_comment.user) do %>
                <%= image_tag book_comment.user.get_profile_image, size: "50x50" %><br>
                <%= book_comment.user.name %>
              <% end %>
            </td>
            <td><%= book_comment.comment %></td>
            <td>
              <% if book_comment.user == current_user %>
                <td><%= link_to 'Destroy', book_book_comment_path(book_comment.book, book_comment), method: :delete,class: "btn btn-sm btn-danger"%></td>
              <% end %>
            </td>
          <% end %>
        </tr>
        <tr>
          <td>
            <%= form_with model: [@book_show, @book_comment], class: "form-group " do |f| %>
              <%= f.text_area :comment, rows: '5' %>
              <%= f.submit "送信" %>
            <% end %>
          </td>
        </tr>
      </table>
    </div>
  </div>
</div>